# ============================================
# REQUIRED
# ============================================

# PostgreSQL
DATABASE_URL=postgresql://podcast:podcast@localhost:5432/podcast_search

# Qdrant
QDRANT_HOST=localhost
QDRANT_PORT=6333
# QDRANT_API_KEY=        # Only for Qdrant Cloud

# OpenAI (for embeddings)
OPENAI_API_KEY=sk-...

# Anthropic (for speaker labeling + RAG)
ANTHROPIC_API_KEY=sk-ant-...

# ============================================
# TRANSCRIPTION PROVIDERS (at least one required)
# ============================================

# AssemblyAI
ASSEMBLYAI_API_KEY=
ASSEMBLYAI_MAX_CONCURRENT=32

# Deepgram
DEEPGRAM_API_KEY=
DEEPGRAM_MAX_CONCURRENT=50

# Local Whisper (always available if GPU present)
WHISPER_MODEL=large-v3
WHISPER_DEVICE=cuda
WHISPER_MAX_CONCURRENT=2

# Default provider: assemblyai | deepgram | whisper
DEFAULT_TRANSCRIPTION_PROVIDER=deepgram

# ============================================
# APPLICATION
# ============================================

# Environment: development | production
ENVIRONMENT=development

# Public URL (for links in responses)
PUBLIC_URL=http://localhost:3000

# Admin secret (for protected routes)
ADMIN_SECRET=change-me-in-production

# ============================================
# OPTIONAL (for cloud deployment)
# ============================================

# Sentry (error tracking)
# SENTRY_DSN=

# Redis (for job queue in production)
# REDIS_URL=redis://localhost:6379
